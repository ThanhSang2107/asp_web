@model IEnumerable<BaiKiemTra02.Models.LopHoc>

<h2>Danh sách lớp học</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th> <!-- Thêm cột ID -->
            <th>Tên Lớp</th>
            <th>Năm Nhập Học</th>
            <th>Năm Ra Trường</th>
            <th>Số Lượng Sinh Viên</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td> <!-- Hiển thị ID -->
                <td>@item.TenLopHoc</td>
                <td>@item.NamNhapHoc</td>
                <td>@item.NamRaTruong</td>
                <td>@item.SoLuongSinhVien</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Chỉnh sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>